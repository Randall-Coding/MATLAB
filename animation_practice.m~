function [] = animation_practice()

    close all
    
    l = animatedline;
    l2 = animatedline(1:10,0.2:0.2:2);
    set(gca,'XLim',[0 100]);
    pause(0.5);
    
    %x = 0:0.5*pi:100*pi; 
    %y = sin(x); 
    x1 = 0;
    y1 = six(x1); 
    incr = 0.1;        %incrementer 
    
    colors = ["red";"green";"blue";"yellow";"magenta";"cyan";"black";"red";"green";"blue";"yellow";"magenta";"cyan";"black" ]; 
    wid = 1;
    c = 1;
    
    for i = 1:500
        pause(0.1);

        addpoints(l,x1,y1);
        drawnow;
         
        %debug r1 = r1 + 0.2;
        % r2 = r2 + 0.2; 
        % wid = i/5;
        setcolor();
        
        set(l,'Color',colors(c),'LineWidth',wid);
    end
    
    
    
   %sub functions 
   function output = setcolor()
         if c > 10 
            c = 1;
         else
            c = c + 1; 
         end
    end   %end setwid() 
end

